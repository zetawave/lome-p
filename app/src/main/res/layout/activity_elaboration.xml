<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ElaborationActivity"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar_background">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="1"
                android:columnCount="2">
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/back_button"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/arrow_white_back"
                    android:layout_margin="5dp"
                    />
                <Toolbar
                    android:id="@+id/elaboration_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:title="@string/parameters"
                    android:titleTextColor="@color/white">

                </Toolbar>
            </GridLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Mygrey">


                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="1">



                    <GridLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:rowCount="1"
                        android:columnCount="2">



                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_columnWeight="1"
                            android:layout_margin="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="8dp"
                            android:backgroundTint="@color/primary_dark">

                            <TextView
                                android:id="@+id/file_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Files: "
                                android:layout_margin="10dp"
                                android:layout_marginTop="15dp"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:textStyle="italic"
                                />
                        </androidx.cardview.widget.CardView>

                        <Button
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_width="35sp"
                            android:layout_height="35sp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/white"
                            android:id="@+id/viewPaths"
                            android:background="@drawable/ic_info_outline_gray_24dp"/>
                    </GridLayout>



                    <GridLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:rowCount="1"
                        android:columnCount="2">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_columnWeight="1"
                            android:layout_margin="10dp"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="8dp"
                            android:backgroundTint="@color/primary_dark">
                            <TextView
                                android:id="@+id/total_size"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Total: "
                                android:layout_margin="10dp"
                                android:layout_marginTop="15dp"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:textStyle="italic"
                                />
                        </androidx.cardview.widget.CardView>
                    </GridLayout>

                    <GridLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:rowCount="1"
                        android:columnCount="2">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_columnWeight="1"
                            android:layout_margin="10dp"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="8dp"
                            android:backgroundTint="@color/primary_dark">
                            <TextView
                                android:id="@+id/deletion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/delete_at_the_end"
                                android:layout_margin="10dp"
                                android:layout_marginTop="15dp"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:textStyle="italic"
                                />
                        </androidx.cardview.widget.CardView>
                    </GridLayout>



                    <GridLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:rowCount="1"
                        android:columnCount="2">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_columnWeight="1"
                            android:layout_margin="10dp"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="8dp"
                            android:backgroundTint="@color/primary_dark">
                            <TextView
                                android:id="@+id/current_path_to_save"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Save: "
                                android:layout_margin="10dp"
                                android:layout_marginTop="15dp"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:textStyle="italic"
                                />
                        </androidx.cardview.widget.CardView>
                    </GridLayout>


                    <GridLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:rowCount="1"
                        android:columnCount="4"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_columnWeight="1"
                            android:layout_margin="10dp"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="8dp"
                            android:backgroundTint="@color/primary_dark">

                            <GridLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:columnCount="1"
                                android:rowCount="2">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/keys"
                                    android:textStyle="bold|italic"
                                    android:layout_margin="10dp"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"/>
                            </GridLayout>
                        </androidx.cardview.widget.CardView>



                        <androidx.cardview.widget.CardView
                            android:id="@+id/qrcode_key"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:backgroundTint="@color/Mygrey"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="8dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_gravity="center_vertical|center_horizontal"
                            >
                            <ImageView
                                android:id="@+id/qrkeyimage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/qrcode"
                                android:padding="5sp"
                                android:contentDescription="TODO" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/key_file"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:backgroundTint="@color/Mygrey"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="8dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_gravity="center_vertical|center_horizontal"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/keyfile_2"
                                android:contentDescription="TODO" />


                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/password"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:backgroundTint="@color/Mygrey"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="8dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:foreground="?android:attr/selectableItemBackground"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Abc"
                                android:textSize="25sp"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_marginTop="0dp"
                                android:textStyle="bold"
                                android:textColor="@color/md_black_1000"
                                />
                        </androidx.cardview.widget.CardView>
                    </GridLayout>



                    <!--
                                            <GridLayout
                                                android:layout_height="match_parent"
                                                android:layout_width="match_parent"
                                                android:rowCount="1"
                                                android:columnCount="2">


                                                <android.support.v7.widget.CardView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_columnWeight="1"
                                                    android:layout_margin="15dp"
                                                    android:layout_rowWeight="1"
                                                    app:cardCornerRadius="5dp"
                                                    app:cardElevation="8dp"
                                                    android:backgroundTint="@color/primary">
                                                <mehdi.sakout.fancybuttons.FancyButton
                                                    android:id="@+id/modify_path"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_horizontal"

                                                    fancy:fb_text="Modifica Path"
                                                    fancy:fb_borderColor="@color/primary"
                                                    fancy:fb_borderWidth="5dp"
                                                    fancy:fb_defaultColor="@color/primary"

                                                    android:layout_margin="10dp"
                                                    android:layout_marginTop="15dp"
                                                    fancy:fb_textSize="20dp"
                                                    fancy:fb_focusColor="@color/white"
                                                    fancy:fb_textColor="@color/Mygrey"
                                                    fancy:fb_iconResource="@drawable/ic_directions_black_24dp"
                                                    fancy:fb_iconPaddingTop="8dp"
                                                    fancy:fb_iconPaddingRight="12dp"
                                                    fancy:fb_radius="5dp"
                                                    />
                                            </android.support.v7.widget.CardView>

                                    </GridLayout>
                    !-->

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:rowCount="1"
                        android:columnCount="3">


                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="10dp"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="8dp"
                            android:backgroundTint="@color/primary_dark">
                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/create_archive_zip"
                                android:layout_margin="10dp"
                                android:layout_marginTop="15dp"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:textStyle="bold|italic"

                                />
                        </androidx.cardview.widget.CardView>

                        <EditText
                            android:layout_height="40sp"
                            android:layout_width="wrap_content"
                            android:minWidth="60sp"
                            android:maxWidth="100sp"
                            android:inputType="text"
                            android:id="@+id/archive_name"
                            android:layout_gravity="center|start"
                            android:visibility="invisible"
                            android:hint="@string/name"/>

                        <Switch
                            android:layout_gravity="center|end"
                            android:id="@+id/toArchive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:theme="@style/SwitchCompatTheme"/>
                    </LinearLayout>



                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/proceed"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        fancy:fb_text="@string/proceed_elaboration"
                        fancy:fb_borderColor="@color/primary_dark"
                        fancy:fb_borderWidth="5dp"
                        fancy:fb_defaultColor="@color/primary_dark"


                        android:layout_margin="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        fancy:fb_textSize="20dp"
                        fancy:fb_focusColor="@color/white"
                        fancy:fb_textColor="@color/Mygrey"
                        fancy:fb_iconResource="@drawable/ic_play_arrow_black_24dp"
                        fancy:fb_iconPaddingTop="13dp"
                        fancy:fb_iconPaddingRight="12dp"
                        fancy:fb_radius="5dp"
                        />



                </GridLayout>

        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>