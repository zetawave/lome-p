<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="#f4f4f4"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="2"
        android:columnCount="1"
        android:padding="5sp"
        android:orientation="vertical"
        >
        <GridLayout
            android:columnCount="1"
            android:rowCount="3"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="start"
            android:background="@drawable/custom_shadow4"
            android:elevation="10dp"

            >
<GridLayout
    android:rowCount="1"
    android:layout_width="match_parent"
    >
            <TextView
                android:id="@+id/get_private_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "@string/private_"
                android:padding="5sp"
                android:textColor="#F44336"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="0dp"
                android:paddingBottom="10dp"
                android:layout_gravity="start"
                android:visibility="gone"
                android:background="@drawable/textview_border2"/>

            <TextView
                android:id="@+id/get_public_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/public_"
                android:textColor="@color/primary"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@drawable/textview_border3"
                android:padding="5sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginStart="0sp"
                android:layout_marginTop="0dp"
                android:paddingBottom="10dp"
                android:layout_gravity="start"
                android:visibility="gone"/>

    <Button
        android:id="@+id/popupMenu"
        android:background="@drawable/ic_more_horiz_black_24dp"
        android:layout_height="35sp"
        android:layout_width="35sp"
        />


