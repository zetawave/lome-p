<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.lo.lomefree.Activities.SharingHandler">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="4"
        android:paddingStart="80dp"
        android:paddingEnd="80dp"
        android:padding="10sp"
        android:background="@color/primary_dark">

        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:SpinKit_Style="Circle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"

            app:SpinKit_Color="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="@string/work_in_progress_acquisition"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/do_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fancy:fb_text="Background"
            fancy:fb_borderColor="@color/primary"
            fancy:fb_borderWidth="5dp"
            fancy:fb_defaultColor="@color/primary"
            android:layout_gravity="center_horizontal"
            fancy:fb_textSize="20dp"
            fancy:fb_focusColor="@color/white"
            fancy:fb_textColor="@color/Mygrey"
            fancy:fb_radius="5dp"
            />
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/stop_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fancy:fb_text="@string/cancel"
            fancy:fb_borderColor="@color/md_red_A400"
            fancy:fb_borderWidth="5dp"
            fancy:fb_defaultColor="@color/md_red_A400"
            android:layout_gravity="center_horizontal"

            android:layout_margin="10dp"
            android:layout_marginTop="15dp"
            fancy:fb_textSize="20dp"
            fancy:fb_focusColor="@color/white"
            fancy:fb_textColor="@color/Mygrey"
            fancy:fb_radius="5dp"
            />

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
